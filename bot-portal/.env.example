# HCI Bot Portal - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3010
NODE_ENV=development

# Authentication
# Generate a secure random string for production: openssl rand -hex 32
JWT_SECRET=your-secure-random-secret-key-change-this-in-production

# Anthropic API Configuration
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-anthropic-api-key-here

# Database Configuration
DB_PATH=./data/bot-portal.db

# CORS Configuration (for production)
# CORS_ORIGIN=https://your-domain.com

# Session Configuration
SESSION_TIMEOUT_MINUTES=120

# Rate Limiting (requests per minute)
RATE_LIMIT=60

# Logging
LOG_LEVEL=info

# Analytics
ENABLE_ANALYTICS=true

# Email Configuration (optional, for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@kwansei.ac.jp
# SMTP_PASS=your-email-password

# University SSO Configuration (optional)
# SSO_ENABLED=false
# SSO_PROVIDER_URL=https://sso.kwansei.ac.jp
# SSO_CLIENT_ID=your-client-id
# SSO_CLIENT_SECRET=your-client-secret
