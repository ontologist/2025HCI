# HCI-101 Bot Portal Environment Configuration
# HCI-101ボットポータル環境設定

# Server Configuration | サーバー設定
PORT=3000
NODE_ENV=development

# Database Configuration | データベース設定
DB_PATH=./data/hci101_bot.db

# AI Service Configuration | AIサービス設定
# Choose one AI service | 1つのAIサービスを選択

# OpenAI Configuration | OpenAI設定
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Claude Configuration | Claude設定
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# JWT Configuration | JWT設定
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d

# Rate Limiting | レート制限
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload | ファイルアップロード
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging | ログ
LOG_LEVEL=info
LOG_FILE=./logs/hci101_bot.log

# Bot Personality | ボットパーソナリティ
BOT_NAME=HCI-101 Design Mentor
BOT_LANGUAGE=bilingual
BOT_TONE=helpful, encouraging, professional

# Course Configuration | コース設定
COURSE_NAME=HCI-101
COURSE_SEMESTER=Fall 2025
INSTRUCTOR_NAME=Yuri Tijerino
MAX_STUDENTS=50

# Security | セキュリティ
CORS_ORIGIN=http://localhost:3000
SESSION_SECRET=your_session_secret_here
